<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">
    <ImageView
        android:id="@+id/user_head_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_warning_black_24dp"
        android:clickable="true"
    />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_head_image"
        android:layout_toLeftOf="@+id/replies"
        android:text="文章标题"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:textColor="@android:color/background_dark"
        tools:ignore="NewApi" />
    <TextView
        android:id="@+id/node_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="node"
        android:layout_toRightOf="@+id/user_head_image"
        android:layout_below="@+id/title"
        style="@style/textStyle"
        />
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user_name"
        android:layout_toRightOf="@+id/node_name"
        android:layout_alignBottom="@+id/node_name"
        style="@style/textStyle"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_toRightOf="@+id/author"
        android:layout_alignBottom="@+id/author"
        style="@style/textStyle"
        />
    <TextView
        android:id="@+id/replies"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="0"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/replies"
        android:layout_marginLeft="2dp"/>
</RelativeLayout>